{
  "name": "ilp-grpc",
  "version": "1.0.0",
  "description": "",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "files": [
    "src/lib/**/*.ts",
    "src/lib/proto/*.proto",
    "build/lib/**/*.js",
    "build/lib/**/*.js.map",
    "build/lib/**/*.d.ts",
    "build/doc"
  ],
  "scripts": {
    "clean": "rm -Rf .nyc_output && rm -Rf coverage && rm -Rf build ",
    "build": "tsc",
    "lint": "tslint --project .",
    "pretest": "tsc --build",
    "test": "nyc mocha --ui mocha-typescript --require source-map-support/register build/test",
    "doc": "typedoc --options typedoc.js src/lib/index.ts",
    "codecov": "codecov",
    "preversion": "npm run lint && npm test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run lint && npm test && npm run doc"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.3.0",
    "@types/debug": "0.0.30",
    "@types/protobufjs": "^6.0.0",
    "@types/through2": "^2.0.33",
    "btp-packet": "^2.0.2",
    "debug": "^3.1.0",
    "eventemitter2": "^5.0.1",
    "grpc": "^1.15.1",
    "ilp-logger": "^1.1.2",
    "ilp-packet": "^3.0.0",
    "mocha": "^5.2.0",
    "riverpig": "^1.1.4",
    "through2": "^2.0.3",
    "ts-node": "^7.0.1",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "nyc": "^13.1.0",
    "prettier": "^1.13.7",
    "ts-jest": "^23.0.1",
    "tslint-config-prettier": "^1.14.0",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.0.2",
    "mocha": "^5.1.1",
    "mocha-typescript": "^1.1.14",
    "sinon": "^6.0.1",
    "source-map-support": "^0.5.9",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.3"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "include": [
      "build/lib/**/*.js"
    ],
    "exclude": [
      "build/test/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true
  },
  "author": "",
  "license": "ISC"
}
